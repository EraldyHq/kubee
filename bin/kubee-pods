#!/usr/bin/env bash

if [[ "${1:-}" =~ "synopsis"|"-h"|"--help" ]]; then
  basename "$0"
  echo "Return all pods on the cluster"
  exit 0
fi

KUBEE_ENV=$(source kubee-env) || error::exit $?
eval "$KUBEE_ENV"

# Do the work
kubectl get pod --all-namespaces  -o custom-columns='NAME:.metadata.name,NAMESPACE:.metadata.namespace'
