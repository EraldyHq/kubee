            "tcp": {
              "properties": {
                "preferred_ip_protocol": {
                  "default": "ip4",
                  "required": [],
                  "title": "preferred_ip_protocol",
                  "type": "string"
                },
                "query_response": {
                  "items": {
                    "anyOf": [
