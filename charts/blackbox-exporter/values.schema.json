                  "title": "tls_config",
                  "type": "object"
                }
              },
              "required": [
                "preferred_ip_protocol",
                "query_response",
                "tls",
                "tls_config"
              ],
              "title": "tcp",
              "type": "object"
            }
          },
          "required": [
            "prober",
            "tcp"
          ],
