        "irc_banner": {
          "properties": {
            "prober": {
              "default": "tcp",
              "required": [],
              "title": "prober",
              "type": "string"
            },
            "tcp": {
              "properties": {
                "preferred_ip_protocol": {
                  "default": "ip4",
                  "required": [],
                  "title": "preferred_ip_protocol",
                  "type": "string"
                },
                "query_response": {
                  "items": {
                    "anyOf": [
                      {
                        "properties": {
                          "send": {
                            "default": "NICK prober",
                            "required": [],
                            "title": "send",
                            "type": "string"
                          }
                        },
                        "required": [
                          "send"
                        ],
                        "type": "object"
                      },
                      {
                        "properties": {
                          "send": {
                            "default": "USER prober prober prober :prober",
                            "required": [],
                            "title": "send",
                            "type": "string"
                          }
                        },
                        "required": [
                          "send"
                        ],
                        "type": "object"
                      },
                      {
                        "properties": {
                          "expect": {
                            "default": "PING :([^ ]+)",
                            "required": [],
                            "title": "expect",
                            "type": "string"
                          },
                          "send": {
                            "default": "PONG ${1}",
                            "required": [],
                            "title": "send",
                            "type": "string"
                          }
                        },
                        "required": [
                          "expect",
                          "send"
                        ],
                        "type": "object"
                      },
                      {
                        "properties": {
                          "expect": {
                            "default": "^:[^ ]+ 001",
                            "required": [],
                            "title": "expect",
                            "type": "string"
                          }
                        },
                        "required": [
                          "expect"
                        ],
                        "type": "object"
                      }
                    ],
                    "required": []
                  },
                  "required": [],
                  "title": "query_response",
                  "type": "array"
                }
              },
              "required": [
                "preferred_ip_protocol",
                "query_response"
              ],
              "title": "tcp",
              "type": "object"
            }
          },
          "required": [
            "prober",
            "tcp"
          ],
          "title": "irc_banner",
          "type": "object"
        },
        "pop3s_banner": {
          "properties": {
            "prober": {
              "default": "tcp",
              "required": [],
