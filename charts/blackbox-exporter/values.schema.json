                  "required": [],
                  "title": "preferred_ip_protocol",
                  "type": "string"
                }
              },
              "required": [
                "preferred_ip_protocol"
              ],
              "title": "tcp",
              "type": "object"
            }
          },
          "required": [
            "prober",
            "tcp"
          ],
          "title": "tcp_connect",
          "type": "object"
