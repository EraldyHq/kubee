      "properties": {
        "enabled": {
          "default": true,
          "description": "Enable or disable the mixin creation",
          "required": [],
          "title": "enabled",
          "type": "boolean"
        },
        "probe_failed_interval": {
          "default": "2m",
          "description": "The period in minutes to consider for the probe to fail Why 2m? If we probe every minute, the alert seems to not fire if the interval is 1m",
          "required": [],
          "title": "probe_failed_interval"
        }
      },
      "required": [
        "enabled"
      ],
      "title": "mixin",
      "type": "object"
